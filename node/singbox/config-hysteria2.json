{
  "log": {
    "level": "info",
    "timestamp": true
  },
  "experimental": {
    "v2ray_api": {
      "listen": "127.0.0.1:10085",
      "stats": {
        "enabled": true,
        "users": ["{{USERS}}"]
      }
    }
  },
  "inbounds": [
    {
      "type": "hysteria2",
      "tag": "hysteria2-in",
      "listen": "::",
      "listen_port": {{LISTEN_PORT}},
      "sniff": true,
      "sniff_override_destination": true,
      "up_mbps": {{UP_MBPS}},
      "down_mbps": {{DOWN_MBPS}},
      "obfs": {
        "type": "salamander",
        "password": "{{OBFS_PASSWORD}}"
      },
      "users": [
        {{USERS_JSON}}
      ],
      "ignore_client_bandwidth": false,
      "tls": {
        "enabled": true,
        "server_name": "{{SNI}}",
        "alpn": ["h3"],
        "certificate_path": "/etc/sing-box/cert.pem",
        "key_path": "/etc/sing-box/key.pem"
      }
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct"
    },
    {
      "type": "block",
      "tag": "block"
    },
    {
      "type": "dns",
      "tag": "dns-out"
    }
  ],
  "route": {
    "rules": [
      {
        "protocol": "dns",
        "outbound": "dns-out"
      },
      {
        "geoip": ["private"],
        "outbound": "block"
      }
    ],
    "final": "direct"
  },
  "dns": {
    "servers": [
      {
        "tag": "google",
        "address": "tls://8.8.8.8"
      },
      {
        "tag": "cloudflare",
        "address": "tls://1.1.1.1"
      },
      {
        "tag": "local",
        "address": "local"
      }
    ],
    "rules": [
      {
        "outbound": ["any"],
        "server": "local"
      }
    ],
    "final": "google"
  }
}
